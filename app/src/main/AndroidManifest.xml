<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rangkul"
        tools:targetApi="31">
        <activity
            android:name=".profile.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".authentication.ForgotPasswordActivity"
            android:exported="false"
            android:parentActivityName=".authentication.LoginWithEmailActivity" />
        <activity
            android:name=".authentication.LoginWithEmailActivity"
            android:exported="false"
            android:parentActivityName=".authentication.LoginOptionsActivity" />
        <activity
            android:name=".authentication.SignupWithEmailActivity"
            android:exported="false"
            android:parentActivityName=".authentication.SignupOptionsActivity" />
        <activity
            android:name=".authentication.SignupOptionsActivity"
            android:exported="false"
            android:parentActivityName=".authentication.AuthenticationActivity" />
        <activity
            android:name=".authentication.LoginOptionsActivity"
            android:exported="false"
            android:parentActivityName=".authentication.AuthenticationActivity" />
        <activity
            android:name=".authentication.AuthenticationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>